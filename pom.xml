                <!--${project.build.outputDirectory}/static/docs-->
                <!--</outputDirectory>-->
                <!--<resources>-->
                <!--<resource>-->
                <!--<directory>-->
                <!--${project.build.directory}/generated-docs-->
                <!--</directory>-->
                <!--</resource>-->
                <!--</resources>-->
                <!--</configuration>-->
                <!--</execution>-->
                <!--</executions>-->
                <!--</plugin>-->


                <plugin>
                    <groupId>org.springframework.boot</groupId>
                    <artifactId>spring-boot-maven-plugin</artifactId>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>
</project>
